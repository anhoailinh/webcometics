<script>
	document.getElementById("btnFilter").addEventListener("click", function () {
		
		var priceRange = GetselectCheckboxes("Price-Filter-form");
		var colors = GetselectCheckboxes("Color-Filter-form");
		var sizes = GetselectCheckboxes("Size-Filter-form");
		console.log(priceRange);
		console.log(colors);
		console.log(sizes);
		var data = {
			PriceRanges: priceRange,
			Colors: colors,
			Sizes: sizes,
		}
		fetch("/Products/GetFilterProducts", {
			method: "POST",
			headers: {
				"Content-Type": "application/json",
			},
			body: JSON.stringify(data),
		}).then(function (response) {
			if (response.ok) {
				return response.text();
			} else {
				throw new Error("Error sending data to the controller");
			}
		}).then(function(results){
			$("#Filter-Products").html(results);

			var TotalItems = document.querySelectorAll(".hai2");
			var PageSize = 12;
			var TotalPages = Math.ceil(TotalItems.length / PageSize);
			const div = document.createElement("div");
			div.classList.add("row", "col-lg-12", " text-center", "pagination-wrap","col-md-4","col-lg-3","p-b-35","isotope-item");
			
			const ul = document.createElement("ul");
			ul.classList.add("ull");
			for(var i=1; i<=TotalPages;i++){
				var li = document.createElement("li");
			     li.classList.add("lii");
				var a = document.createElement("a");
				a.classList.add("aa");
				a.setAttribute("href","#");
				li.appendChild(a);
				ul.appendChild(li);
			}
			div.appendChild(ul);
			document.getElementById("Filter-Products").appendChild(div);
			
		})
		.catch(function (error) {
			console.log("an error occurred: " + error)
		});
	});

	function GetselectCheckboxes(formId) {
		var checkboxes = $('#' + formId + ' input[type="checkbox"]:checked');
		var values = [];
		checkboxes.each(function () {
			values.push($(this).attr('val'));
		});
		return values;
	}
</script>
