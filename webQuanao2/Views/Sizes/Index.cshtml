@model IEnumerable<webQuanao2.Models.Size>

@{
    ViewData["Title"] = "Index";
    Layout = "_Admin";
}
<div style="padding-left:300px; padding-top:50px ; width:100%">
<h1>Size</h1>

<p>
    <a asp-action="Create">Thêm mới</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SizeName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SizeName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.SizeId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.SizeId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.SizeId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</div>