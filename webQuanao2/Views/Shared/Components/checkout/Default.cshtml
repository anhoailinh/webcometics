@model Cart
<!-- breadcrumb -->
<div class="container">
	<div class="bread-crumb flex-w p-l-25 p-r-15 p-t-84 p-lr-0-lg">
		<a href="index.html" class="stext-109 cl8 hov-cl1 trans-04">
			Home
			<i class="fa fa-angle-right m-l-9 m-r-10" aria-hidden="true"></i>
		</a>

		<span class="stext-109 cl4">
			Check out
		</span>
	</div>
</div>


<!-- Shoping Cart -->
<div class="bg0 p-t-55 p-b-85">
	<div class="container">
		<div class="row">
			<div class="col-lg-10 col-xl-7 m-lr-auto m-b-50">
				<div class="m-l-25 m-r--38 m-lr-0-xl">
					<div class="wrap-table-shopping-cart">
						<table class="table-shopping-cart">
							<tr class="table_head">
								<th class="column-1">Product</th>
								<th class="column-2"></th>
								<th class="column-3">Price</th>
								<th class="column-4">Quantity</th>
								<th class="column-5">Total</th>
								<th class="column-6" style="padding-right:3px">Remove</th>
							</tr>
							@foreach (var line in Model?.Lines ?? Enumerable.Empty<CartLine>())
							{
								<tr class="table_row">

									<td class="column-1" style="padding-left:14px">
										<div class="how-itemcart1">
											<img src="~/images/@line.Product.Img1" alt="IMG">
										</div>
									</td>
									<td class="column-2">@line.Product.Name</td>
									<td class="column-3">@(line.Product.Price - line.Product.Discount) <sup>đ</sup></td>
									<td class="column-4">
										<div class="wrap-num-product flex-w m-l-auto m-r-0">
											<a href="/Cart/UpdateToCart/?productId= @line.Product.Id">
												<div class="btn-num-product-down cl8 hov-btn3 trans-04 flex-c-m">
													<i class="fs-16 zmdi zmdi-minus"></i>
												</div>
											</a>

											<input class="mtext-104 cl3 txt-center num-product" type="number" name="num-product1" value="@line.Quantity">
											<a href="/Cart/AddToCart/?productId= @line.Product.Id">
												<div class="btn-num-product-up cl8 hov-btn3 trans-04 flex-c-m">
													<i class="fs-16 zmdi zmdi-plus"></i>
												</div>
											</a>
										</div>
									</td>
									<td class="column-5">@((line.Product.Price - line.Product.Discount) * line.Quantity) <sup>đ</sup></td>



									<td class="column-6">
										<a href="/Cart/RemoveFromCart/?productId= @line.Product.Id">
											<button>
												X
											</button>
										</a>
									</td>
								</tr>

							}
						</table>
					</div>


				</div>
			</div>


		</div>
	</div>
</div>
<div class="row " style="    justify-content: space-around;">
	<div class="col-sm-10 col-lg-7 col-xl-5 ">
		<div class="bor10 p-lr-40 ">
			<h4 class="mtext-109 cl2 p-b-30">
				Cart Totals
			</h4>

			<div class="flex-w flex-t bor12 p-b-13">
				<div class="size-208">
					<span class="stext-110 cl2">
						Subtotal:
					</span>
				</div>

				<div class="size-209">
					<span class="mtext-110 cl2">
						@Model?.ComputeTotalValue() <sup>đ</sup>
					</span>
				</div>
			</div>

			<div class="flex-w flex-t bor12 p-t-15 p-b-30">
				<div class="size-208 w-full-ssm">
					<span class="stext-110 cl2">
						Shipping:
					</span>
				</div>

				<div class="size-208 w-full-ssm">
					<span class="stext-110 cl2">
						20.000 <sup>đ</sup>
					</span>
				</div>

				<div class="size-209 p-r-18 p-r-0-sm w-full-ssm">


					<div class="p-t-15">
						<span class="stext-112 cl8">
							Calculate Shipping
						</span>





						<div class="bor8 bg0 m-b-22" style="width:319px">
							<input class="stext-111 cl8 plh3 size-111 p-lr-15" type="text" name="postcode" placeholder="Địa chỉ">
						</div>





					</div>
				</div>
			</div>

			<div class="flex-w flex-t p-t-27 p-b-33">
				<div class="size-208">
					<span class="mtext-101 cl2">
						Total:
					</span>
				</div>

				<div class="size-209 p-t-1">
					<span class="mtext-110 cl2">
						@(Model?.ComputeTotalValue() + 20) <sup>đ</sup>
					</span>
				</div>
			</div>

			<button class="flex-c-m stext-101 cl0 size-116 bg3 bor14 hov-btn3 p-lr-15 trans-04 pointer">
				Proceed to Checkout
			</button>
		</div>
	</div>


</div>