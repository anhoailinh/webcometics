</div>
<div class="row isotope-grid " style="margin:14px" id="Filter-Products">
	@foreach (var item in Model.Products)
	{
		<div class="col-sm-6 col-md-4 col-lg-3 p-b-35 isotope-item women">
			<!-- Block2 -->
			<div class="block2">
				<div class="block2-pic hov-img0">
					<img src="~/images/@item.Img1" alt="IMG-PRODUCT">

					<a asp-action="Details" asp-controller="Products" asp-route-id="@item.Id" class="block2-btn flex-c-m stext-103 cl2 size-102 bg0 bor2 hov-btn1 p-lr-15 trans-04 ">
						Mua ngay
					</a>
				</div>

				<div class="block2-txt flex-w flex-t p-t-14">
					<div class="block2-txt-child1 flex-col-l ">
						<a asp-action="Details" asp-controller="Products" asp-route-id="@item.Id" class="stext-104 cl4 hov-cl1 trans-04 js-name-b2 p-b-6">
							@item.Name
						</a>
						
						<span  class="stext-105 cl3">
							@item.Price
						</span>
					</div>

					<div class="block2-txt-child2 flex-r p-t-3">
						<a href="#" class="btn-addwish-b2 dis-block pos-relative js-addwish-b2">
							<img class="icon-heart1 dis-block trans-04" src="~/images/icons/icon-heart-01.png" alt="ICON">
							<img class="icon-heart2 dis-block trans-04 ab-t-l" src="~/images/icons/icon-heart-02.png" alt="ICON">
						</a>
					</div>
				</div>
			</div>
		</div>

	}
</div>
<div class="row" style="margin-bottom:30px">
	<div class="col-lg-12 text-center">
		<div class="pagination-wrap">
			<ul style="display:flex;     justify-content: center;">
				<li style="    padding: 4px;color: black;border: 1px solid #1111; margin: 1px;">
				<a style="color:black" href="#">Prev</a></li>


				@for(int i = 1; i <= Model.PagingInfo.TotalPage; i++)
				{
				<li style="    padding: 4px;color: black; border: 1px solid #1111;  margin: 1px; ">
						<a style="color:black" href="/Products/?ProductPage=@i">@i</a>
			</li>
					
				}
				



				<li style="    padding: 4px; color: black; border: 1px solid #1111; margin: 1px;">
					<a style="color:black" href="#">Next</a>
				</li>
			</ul>
		</div>
	</div>
</div>
 

<script>
	document.getElementById("btnFilter").addEventListener("click", function () {
		alert("You clicked me!");
		var priceRange = GetselectCheckboxes("Price-Filter-form");
		var colors = GetselectCheckboxes("Color-Filter-form");
		var sizes = GetselectCheckboxes("Size-Filter-form");
		console.log(priceRange);
		console.log(colors);
		console.log(sizes);
		var data = {
			PriceRanges: priceRange,
			Colors: colors,
			Sizes: sizes,
		}
		fetch("/Products/GetFilterProducts", {
			method: "POST",
			headers: {
				"Content-Type": "application/json",
			},
			body: JSON.stringify(data),
		}).then(function (response) {
			if (response.ok) {
				return response.text();
			} else {
				throw new Error("Error sending data to the controller");
			}
		}).catch(function (error) {
			console.log("an error occurred: " + error)
		});
	});

	function GetselectCheckboxes(formId) {
		var checkboxes = $('#' + formId + ' input[type="checkbox"]:checked');
		var values = [];
		checkboxes.each(function () {
			values.push($(this).attr('val'));
		});
		return values;
	}
</script>
